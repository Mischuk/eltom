.m_header
  position relative
  height 122px
  box-shadow 0 0 5px rgba(0,0,0,.25)
  cursor default
  .helper
    display table-cell
    vertical-align middle
  .logo
    float left
    width 200px
    height 82px
    margin 20px 0
    @media screen and (max-width: 940px)
      width 90px
    a
      display block
      width 100%
      height 100%
      background url("../images/logo.png") no-repeat 0 0
      background-size cover
      @media screen and (max-width: 940px)
        background-image url("../images/logo-preload.png")
  .locate
    display table
    float left
    height 100%
    margin-left 105px
    margin-right 60px
    @media screen and (max-width: 1024px)
      margin-left 70px
      margin-right 40px
    @media screen and (max-width: 940px)
      margin-left 50px
    p
      position relative
      span
        position absolute
        left -20px
        top -2px
        font-size 21px
        color $blue
  .email
    display table
    float left
    height 100%
    p
      position relative
      span
        position absolute
        left -25px
        top -4px
        font-size 26px
        color $blue
    a
      color $link
      &:hover
        text-decoration underline
  .tel
    display table
    float right
    height 100%
    text-align right
    .number
      position relative
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -30px -61px;
        width: 16px;
        height: 17px;
        position absolute
        left -20px
        top 3px
      a
        bold()
        color $black
        font-size 22px
        line-height 1
        cursor default
    .callback
      a
        display inline-block
        vertical-align middle
        line-height 1
        color $link
        border-bottom 1px dashed $link
        &:hover
          border-color #fff