body.unload, html.unload
  overflow hidden
  height 100%
#page-preloader
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background #fff
  z-index 9999
  .text
    width 120px
    height 82px
    background url("../images/logo.png") no-repeat -85px 0
    background-size cover
    position absolute
    left 50%
    top 50%
    margin-left -(@width/2)
    margin-top -120px
    &.loaded
      transition transform .35s ease-in
      transition-delay .35s
      transform translateY(400px)
  .logo
    position absolute
    width 100px
    height 101px
    left 50%
    top 50%
    margin-top -(@height/2)
    margin-left -(@width/2)
    background url("../images/logo-preload.png") no-repeat 0 0
    animation rotate 2s infinite linear
    &.loaded
      opacity 0
      transition opacity .35s ease-in
@keyframes rotate
  0%
    transform rotate(0) scale(1)
  50%
    transform rotate(180deg) scale(0.75)
  100%
    transform rotate(360deg) scale(1)

