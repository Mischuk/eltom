.m_s4
  padding-bottom 60px
  background #f9f9f9
  .description
    padding-left 2%
  .image
    overflow hidden
    width 475px
    height 300px
    line-height 300px
    margin-bottom 10px
    text-align center
    border 1px solid $border
    border-radius 5px
    @media screen and (max-width: 1024px)
      width 96%
      margin-left auto
      margin-right auto
    a
      display block
      width 100%
      height 100%
      img
        display inline-block
        vertical-align middle

