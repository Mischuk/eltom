.m_s3
  position relative
  padding-bottom 60px
  table
    width 100%
    font-size 16px
    th
      font-weight normal
      color $white !important
      background $blue
      line-height 50px
    tr
      background #f4f4f4
      border-top 1px solid #fff
      transition background .15s ease-in
      &:nth-child(even)
        background #f9f9f9
      &:hover
        background #f4f4f4 - 5%
        transition background .25s ease-out
      td:first-child,
      th:first-child
        width 50px
        min-width 50px
        max-width 50px
        text-align center
        color #324a5e
        vertical-align top
      td:first-child + td,
      th:first-child + th
        padding-left 50px
      th:last-child,
      td:last-child
        width 250px
        max-width 250px
        min-width 250px
        text-align left
      td
        padding 15px 0
      th, td
        text-align left
        cursor default
      p
        margin 0
      table
        tr
          background none !important
          border none !important
          td
            position relative
            width auto !important
            text-align left !important
            padding 0 !important
            padding-left 15px !important
            color $black !important
            &:first-child
              &:after
                content ''
                width 4px
                height 4px
                position absolute
                left 0
                top 7px
                border-radius 50%
                background $black
            &:last-child
              width 250px !important
              padding-left 0 !important