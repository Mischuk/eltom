.m_s2
  background $bg-gray
  padding-bottom 60px
  .top
    border-bottom 1px solid $border
    text-align center
    margin-bottom 40px
    .icon
      span
        font-size 110px
        color $blue
    p
      margin 0
      font-size 20px
      padding-bottom 35px
      padding-top 10px
      regular()
  .bottom
    .row:first-child
      margin-bottom 40px
    .description
      float left
      width 230px
      padding-left 15px
      font-size 16px
      @media screen and (max-width: 1024px)
        width 100%
        padding-left 0
        width 75%
        margin-left auto
        margin-right auto
        float none
        text-align center
      ul
        padding-top 5px
      li
        position relative
        padding-left 10px
        margin-bottom 5px
        &:before
          content ''
          position absolute
          left 0
          top 7px
          width 5px
          height 5px
          border-radius 50%
          background $black
          @media screen and (max-width: 1024px)
            display none
    .icon
      float left
      width 80px
      height 80px
      line-height 80px
      text-align center
      border 1px solid $border
      border-radius 50%
      @media screen and (max-width: 1024px)
        float none
        margin-left auto
        margin-right auto
        margin-bottom 20px
      span
        font-size 40px
        color $blue
        &.icon-icon-4
          position relative
          top 7px
        &.icon-icon-5
          position relative
          top 12px
          font-size 54px
        &.icon-icon-6
          position relative
          top 10px
          font-size 54px
        &.icon-icon-7
          position relative
          top 10px
        &.icon-icon-8
          position relative
          top 15px
          font-size 48px
        &.icon-icon-9
          position relative
          top 13px
          font-size 50px