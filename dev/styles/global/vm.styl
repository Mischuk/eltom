//============== VARIABLES ==============//

$min-width = 960px
$footer-height = 100px
$footer-margin-top = 50px


$link = #385fa2
$border = #cfcfcf

$bg-gray = #f4f4f4

$blue = #0089cd
$red = #d64a49
$black = #000
