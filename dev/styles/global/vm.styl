//============== MIXINS ==============//

clearfix()
  &:before
  &:after
    content ''
    display table
    clear both

anim()
  transition all 0.25s ease-out

smooth()
  -webkit-transform translate3d(0, 0, 0)
  -webkit-backface-visibility hidden
  -webkit-perspective 1000

font(fz, lh)
  font-size fz
  line-height lh

regular()
  font-family 'ProximaNova-Regular'
  font-weight normal
  font-style normal
light()
  font-family 'ProximaNova-Light'
  font-weight normal
  font-style normal
bold()
  font-family 'ProximaNova-Extrabld'
  font-weight normal
  font-style normal

icon()
  font-family: 'eltom' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

